@{
  Layout = "_Layout";
}
<div class = "jumbotron">
<h1>Salon Stylists</h1>
<p>Click on the stylist's name for client list</p>
</div>

<div class = "container">
@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

@foreach (var category in Model)
{
  <h3>Stylist: <a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
}
</div>
<br><br><br>
<div class = "footer">
<div class = "row">
<div class = "col-md-6">
<h3><a class="btn btn-default btn-lg" role = "button" href='/categories/new'>Add a new Stylist</a></h3>
</div>
<div class = "col-md-6">
<h3><a class="btn btn-default btn-lg" role = "button" href='/'>Back home</a></h3>
</div>
</div>
</div>