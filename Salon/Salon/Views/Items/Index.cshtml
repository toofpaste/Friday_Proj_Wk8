@{
  Layout = "_Layout";
}
@using Salon.Models;
<div class = "jumbotron">
<h1>Cllient List</h1>
</div>

<div class = "container">
<ul>

@if (Model.Count == 0)
{
  <p>You have no clients for this stylist</p>
}
@if(Model.Count != 0)
{
  @foreach (Item item in Model)
  {
    <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
  }
}

</ul>
</div>
<br><br><br>
<div class="footer">
	<a  href="/items/new">Add new client</a>

	<form action="/items/delete" method="post">
	  <button type="submit" name="button">Clear All Employees</button>
	</form>
</div>