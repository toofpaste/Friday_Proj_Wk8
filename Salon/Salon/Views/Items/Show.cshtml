@{
  Layout = "_Layout";
}
<div class = "jumbotron">
<h1>Client Details: </h1>
</div>

<div class = "container">
<h1>Information about client @Model["item"].GetDescription()</h1>
<img src="@Model["item"].GetUrl()" alt="Could Not Find Image" height="150" width="150">
<h2>Name: @Model["item"].GetDescription()</h2>
<h2>Styist: @Model["category"].GetName()</h2>
<h3>Appointment Start: @Model["item"].GetDate()</h3>
<h3>Appointment End: @Model["item"].GetEnd()</h3>
<h3>Haircut Type: <a class="btn btn-default btn-lg" role = "button" href='/categories/@Model["category"].GetId()/items/@Model["item"].GetId()/info'> @Model["item"].GetInfo()</a></h3>
<h3>Price $@Model["item"].GetPrice()</h3>

</div>
<div class = "footer">
	<div class = "row">
		<div class = "col-md-3">
			<a class="btn btn-default btn-lg" role = "button" href='/categories/@Model["category"].GetId()/items/@Model["item"].GetId()/edit'>Edit this Info</a>
		</div>
		<div class = "col-md-3">
			<p><a class="btn btn-default btn-lg" role = "button" href='/categories/@Model["category"].GetId()/items/new'>Add New Client</a></p>
		</div>
		<div class = "col-md-3">
			<p><a class="btn btn-default btn-lg" role = "button" href='/categories'>Return to stylist list</a></p>
		</div>
		<div class = "col-md-3">
			<p><a class="btn btn-default btn-lg" role = "button" href='/'>Return to Main Page</a></p>
		</div>
	</div>
</div>
